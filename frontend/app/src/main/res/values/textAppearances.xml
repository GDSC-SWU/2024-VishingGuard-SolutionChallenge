<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Vishing" parent="">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.Vishing.Title">
        <item name="fontFamily">@font/font_pretendard_bold</item>
        <item name="android:textColor">@color/basic_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Vishing.SubTitle">
        <item name="fontFamily">@font/font_pretendard_bold</item>
        <item name="android:textColor">@color/basic_text</item>
