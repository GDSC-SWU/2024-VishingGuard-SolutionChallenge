<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    android:paddingHorizontal="22dp"
    android:paddingBottom="15dp">

    <EditText
        android:id="@+id/et_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:background="@null"
        android:textAppearance="@style/TextAppearance.Vishing.Content3"
        android:textColor="@color/MainBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.355"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:background="@drawable/ic_rectangle_blue"
        android:backgroundTint="@color/light_gray"
        android:text="@string/btn_cancel"
        android:textAppearance="@style/TextAppearance.Vishing.Content.Bold"
        android:textColor="@color/MainBlack"
        app:layout_constraintEnd_toStartOf="@+id/btn_done"
        app:layout_constraintStart_toStartOf="@+id/et_content"
        app:layout_constraintTop_toBottomOf="@+id/et_content" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_done"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:background="@drawable/ic_rectangle_blue"
        android:backgroundTint="@color/blue"
        android:text="@string/btn_done"
        android:textAppearance="@style/TextAppearance.Vishing.Content.Bold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/et_content"
        app:layout_constraintStart_toEndOf="@+id/btn_cancel"
        app:layout_constraintTop_toTopOf="@+id/btn_cancel" />
</androidx.constraintlayout.widget.ConstraintLayout>