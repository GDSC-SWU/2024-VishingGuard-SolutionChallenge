<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fragment_background">

        <TextView
            android:id="@+id/tv_start_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="220dp"
            android:text="@string/tv_start_title"
            android:textAppearance="@style/TextAppearance.Vishing.Title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_start_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/tv_start_sub"
            android:textAppearance="@style/TextAppearance.Vishing.Content2"
            app:layout_constraintStart_toStartOf="@+id/tv_start_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_start_title"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_google"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="22dp"
            android:paddingLeft="22dp"
            android:background="@drawable/ic_rectangle_white"
            android:drawableStart="@drawable/img_google_logo"
            android:text="@string/btn_sign_up_google"
            android:textAppearance="@style/TextAppearance.Vishing.SubTitle"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_start_sub"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_email"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="22dp"
            android:background="@drawable/ic_rectangle_white"
            android:drawableStart="@drawable/ic_mail"
            android:paddingLeft="22dp"
            android:text="@string/btn_sign_up_email"
            android:textAppearance="@style/TextAppearance.Vishing.SubTitle"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_google"/>

        <TextView
            android:id="@+id/tv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:text="@string/tv_account"
            android:textAppearance="@style/TextAppearance.Vishing.Content2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_email" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="22dp"
            android:background="@drawable/ic_rectangle_white"
            android:paddingHorizontal="40dp"
            android:paddingVertical="0dp"
            android:text="@string/btn_sign_in"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textAppearance="@style/TextAppearance.Vishing.SubTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_user" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>